                    |                     

            // Interests
            section#interests.resume-section
                .resume-section-content
                    h2.mb-5 Interests
                        p
                            input.mb-0(id="id", type="hidden")
                            input.mb-0(id="Ilist", name ="Ilist")
                            p
                            - for (var i=0; i<userData.contents.length; i++)
                                        -if (userData.contents[i].Ilist != null)
                                            -if (userData.contents[i].Ilist != "")
                                                h2.mb-5 #{userData.contents[i].Ilist}

                                                a #{userData.contents[i].Ilist}                                
            // Awards
            section#awards.resume-section
                .resume-section-content
                    h2.mb-5 Awards & Certifications
                    |                     
                    ul.fa-ul.mb-0
                        input.mb-0(id="id", type="hidden")
                        input.mb-0(id="AClist", name ="AClist")
                        p
                        - for (var i=0; i<userData.contents.length; i++)
                            -if (userData.contents[i].AClist != null)
                                -if (userData.contents[i].AClist != "")
                                    li #{userData.contents[i].AClist}

