    body#page-top
        // Navigation
        nav#sideNav.navbar.navbar-expand-lg.navbar-dark.bg-primary.fixed-top
            a.navbar-brand.js-scroll-trigger
                a.nav-link.js-scroll-trigger(href='#page-top') 
            |             
            button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarResponsive', aria-controls='navbarResponsive', aria-expanded='false', aria-label='Toggle navigation')
            |             
            #navbarResponsive.collapse.navbar-collapse
                ul.navbar-nav
                    li.nav-item
                        a.nav-link.js-scroll-trigger(href='#about') About
                    |                     
                    li.nav-item
                        a.nav-link.js-scroll-trigger(href='#experience') Experience
                    |                     
                    li.nav-item
                        a.nav-link.js-scroll-trigger(href='#education') Education
                    |                     
                    li.nav-item
                        a.nav-link.js-scroll-trigger(href='#skills') Skills
                    |                     
                    li.nav-item
                        a.nav-link.js-scroll-trigger(href='#interests') Interests
                    |                     
                    li.nav-item
                        a.nav-link.js-scroll-trigger(href='#awards') Awards
        // Page Content
        .container-fluid.p-0
        form(action='/users/edit/kjj3395', method="POST")
            // About
            section#about.resume-section
                .resume-section-content
                    h1.mb-0
                        | #{userData.user.Last_name}
                        span.text-primary #{userData.user.Given_name}
                        button.btn.btn-light(type='submit') submit
                        
                    p.lead.mb-5
                    .social-icons(style="width: 560px; height: 56px;")
                        for icon in userData.icons 
                            case icon[0]
                                when "linkedin"
                                    a.social-icon(href='#!')        
                                        i.fab.fa-linkedin-in
                                        if icon[1] == "1"
                                            input(type="checkbox", id="linkedin",name="linkedin", onclick="is_checked('linkedin')", checked=true, value="1" )
                                        else
                                            input(type="checkbox", id="linkedin",name="linkedin", onclick="is_checked('linkedin')", checked=false value="0")
                                        
                                when "github"
                                    a.social-icon(href='#!')
                                        i.fab.fa-github
                                        if icon[1] == "1"
                                            input(type="checkbox", id="github", name="github", onclick="is_checked('github')", checked=true, value="1")
                                        else
                                            input(type="checkbox", id="github", name="github", onclick="is_checked('github')", checked=false, value="0")

                                when "twitter"
                                    a.social-icon(href='#!')
                                        i.fab.fa-twitter
                                        if icon[1] == "1"
                                            input(type="checkbox", id="twitter", name="twitter", onclick="is_checked('twitter')", checked=true, value="1")
                                        else
                                            input(type="checkbox", id="twitter", name="twitter", onclick="is_checked('twitter')", checked=false, value="0")

                                when "facebook"
                                    a.social-icon(href='#!')
                                        i.fab.fa-facebook-f
                                        if icon[1] == "1"
                                            input(type="checkbox", id="facebook", name="facebook", onclick="is_checked('facebook')", checked=true, value="1")
                                        else
                                            input(type="checkbox", id="facebook", name="facebook", onclick="is_checked('facebook')", checked=false, value="0")
                                                           
            // Experience
            section#experience.resume-section
                .resume-section-content
                    h2.mb-5 Experience
                    |                     
                    .d-flex.flex-column.flex-md-row.justify-content-between.mb-5
                        .flex-grow-1
                            input.mb-0(id="Etitle", name="Etitle")
                            p
                            input.mb-0(id="Esubtitle", name ="Esubtitle")  
                            p
                            input.mb-0(id="Ecomment", name ="Ecomment")
                            p
                            - for (var i=0; i<userData.contents.length; i++)
                                -if (userData.contents[i].Etitle != null)
                                    -if (userData.contents[i].Etitle != "")

                                            h3.mb-0 #{userData.contents[i].Etitle}

                                            .subheading.mb-3 #{userData.contents[i].Esubtitle}                                

                                            a #{userData.contents[i].Ecomment}


            // Education
            section#education.resume-section
                .resume-section-content
                    h2.mb-5 Education
                    |                     
                    .d-flex.flex-column.flex-md-row.justify-content-between.mb-5
                        .flex-grow-1
                            input.mb-0(id="id", type="hidden")
                            input.mb-0(id="Edtitle", name ="Edtitle")
                            p
                            input.mb-0(id="Edsubtitle", name ="Edsubtitle")  
                            p
                            input.mb-0(id="Edcomment", name ="Edcomment")
                            p
                            - for (var i=0; i<userData.contents.length; i++)
                                -if (userData.contents[i].Edtitle != null)
                                    -if (userData.contents[i].Edtitle != "")
                                        h3.mb-0 #{userData.contents[i].Edtitle}

                                        .subheading.mb-3 #{userData.contents[i].Edsubtitle}                                

                                        a #{userData.contents[i].Edcomment}
            // Skills
            section#skills.resume-section
                .resume-section-content
                    h2.mb-5 Skills
                    |                     
                    .subheading.mb-3 Programming Languages & Tools
                    |                     
                    ul.list-inline.dev-icons
